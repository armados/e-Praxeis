<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">


    <TextView
        android:id="@+id/txtOrgType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtDate"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="7dp"
        android:paddingStart="5dp"
        android:paddingTop="1dp"
        android:paddingRight="5dp"
        android:paddingBottom="1dp"
        android:text="Κατάσταση"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOrganization"
        android:layout_alignStart="@+id/txtAda"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="7dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="Θέμα Πράξης"
        android:textAllCaps="true"
        android:textColor="@color/md_black_1000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtAda"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/txtAda"
        android:text="Ημερομηνία"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtAda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:text="Κωδικός"
        android:textColor="@color/md_green_800"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtOrganization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtType"
        android:layout_alignStart="@+id/txtAda"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Φορέας"
        android:textAllCaps="true"
        android:textColor="@color/md_black_1000"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAda"
        android:layout_alignStart="@+id/txtAda"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="7dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Τύπος Πράξης"
        android:textAllCaps="true"
        android:textSize="12sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listTmp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTitle"
        android:layout_alignStart="@+id/txtAda"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="7dp"/>

</RelativeLayout>